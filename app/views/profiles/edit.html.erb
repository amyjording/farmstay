
<h2>Your Profile</h2>

<%= form_for [@farmie, @profile] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= @profile.picture? ? image_tag(@profile.picture.url, class: 'profile-picture') : image_tag("farmer-penguin.jpg", size: 50, class: 'profile-picture') %>

  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>

  <%= f.label :name, "Display name" %>
  <%= f.text_field :name, value: @farmie.first_name %>

  <%= f.label :intro, "Your introduction" %>
  <%= f.text_field :intro, class: 'form-control' %>

  <%= f.label :about, "A little more about you" %>
  <%= f.text_field :about, class: 'form-control' %>

  <p>Show farms you've visited?</p>

  <%= f.label :show_visited_farms, "Yes", value: true %>
    <%= f.radio_button :show_visited_farms, true, checked: @profile.show_visited_farms?, class: 'radio-align' %>

  <%= f.label :show_visited_farms, "No", value: false %>
  <%= f.radio_button :show_visited_farms, false, checked: !!@profile.show_visited_farms?, class: 'radio-align' %>

  <%= f.submit "Update profile" %>
  <% end %>